<%= form_with model: post, html: { class: "post-form" } do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% post.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
        <% post.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>