<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<hr>


<button>
  <%= link_to "Edit post", edit_post_path %>
</button>

<button>
  <%= link_to "Delete post", post_path, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</button>

<hr>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
  </tr>
  
  <%= render @post.comments %>
  
</table>


<hr>

<h2>Add a comment:</h2>

<%= render 'comments/form' %>